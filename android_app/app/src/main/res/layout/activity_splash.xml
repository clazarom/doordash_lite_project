<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@android:color/black"
    tools:context=".SplashActivity">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="269dp"
            android:layout_height="165dp"
            android:contentDescription="@string/splash_text"
            android:foregroundGravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@raw/splash_screen_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="top|center_horizontal"
            android:text="@string/splash_text"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_text_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/splash_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/version_name_label"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="top|center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_version_text_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>