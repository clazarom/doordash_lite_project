<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary colors theme here. -->
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryDark">@color/lightRed</item>
        <item name="colorAccent">@color/gray</item>
        <!-- TextView style -->
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:textAppearance"> @style/AppTheme.TextAppearance</item>
        <!-- Add tabs style -->
        <item name="tabStyle">@style/AppTheme.TabLayout</item>
        <!-- Add listview style -->
        <item name="android:listViewStyle">@style/AppTheme.ListView</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Text View appearance -->
    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    </style>
    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent = "@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/background_button_dark</item>
        <!--        <item name="android:fontFamily"></item>-->
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- AlertDialog -->
    <style name="RequestPermissionDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">

    </style>

    <!-- ViewPager Style -->
    <!-- Tabs -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.TabLayout.TextAppearance</item>
        <!-- <item name="tabSelectedTextColor">?attr/colorAccent</item> -->
    </style>

    <!-- TabText -->
    <style name="AppTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ListView style -->
    <style name= "AppTheme.ListView" parent="android:Widget.Material.Light.ListView">
        <item name="android:background">@color/white</item>

    </style>

    <!-- Restaurant Detail style -->


</resources>